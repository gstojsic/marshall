package ${packageName};

public final class ${className}JsonSerializer {

    public static String toJson(${className} item) {
        return "{" +
        #foreach($field in $fields)
            "\"${field.name}\":" +
            #if($field.string)
            "\"" +
            #end
            item.${field.getter}() +
            #if($field.string)
            "\"" +
            #end

            #if( $foreach.count < $fields.size() )
                "," +
            #end
        #end
        "}";
    }
}